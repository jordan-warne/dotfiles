unbind-key all
unbind-mouse all

borderwidth 0

# System controls
bind-key MS-Return xterm
bind-key MS-q quit
bind-key MS-r restart
bind-key MS-l lock

# Launchers
bind-key M-d menu-cmd

gap 40 40 40 40

fontname "Dina:size=12:antialias=true"
color font '#FFFFFF'
color selfont '#FFFFFF'
color menubg '#333333'
color menufg '#666666'

# Window controls
bind-key M-Tab window-cycle
bind-key MS-Tab window-rcycle
bind-key M-m window-fullscreen
bind-key M-q window-close
bind-key M-h window-hide

bind-mouse M-1  window-move
bind-mouse CM-1 window-resize
bind-mouse 3 menu-window
bind-mouse C-1 window-raise

command Xterm xterm

ignore "xclock"
